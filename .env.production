# GraphQL endpoint for WooCommerce
GQL_HOST="https://shop.therelic.blog/graphql"

# Production URL
APP_HOST="https://relicshop.netlify.app"

# Products per page
NUXT_PUBLIC_PRODUCTS_PER_PAGE="50"

# Image domains - No spaces after commas!
NUXT_IMAGE_DOMAINS="shop.therelic.blog,relicshop.netlify.app,cloudpurpose.com"

# Production mode
NODE_ENV="production"

# Image Configuration
NUXT_IMAGE_PROVIDER="ipx"
IMAGE_PROVIDER="ipx"
NUXT_PUBLIC_IMAGE_PLACEHOLDER="blur"

# Production Image Optimization
NUXT_IMAGE_QUALITY="80"
NUXT_IMAGE_FORMAT="webp"
NUXT_IPX_CACHE_CONTROL="public, max-age=31536000, immutable"
NUXT_IPX_DOMAINS="shop.therelic.blog,relicshop.netlify.app"

# Build Configuration
NITRO_PRESET="netlify"

# WooNuxt Settings
SITE_NAME="The Relic Shop"
SITE_DESCRIPTION="Premium Quality Products"
WOONUXT_IMAGE_CDN="false"

# WordPress Media Path
WORDPRESS_URL="https://shop.therelic.blog"
